{
  "name": "Beauty Captions",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Personaliza los subt√≠tulos en YouTube.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://www.youtube.com/*"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/64.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/64.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles/main.css"]
    }
  ]
}
